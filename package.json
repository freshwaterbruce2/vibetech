{
  "name": "dev-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "NOVA Agent and Vibe Code Studio monorepo",
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:all": "turbo run build --force",
    "test": "turbo run test",
    "test:all": "turbo run test --force",
    "lint": "turbo run lint",
    "lint:fix": "pnpm run -r lint:fix",
    "clean": "pnpm run -r clean && rm -rf .turbo",
    "typecheck": "turbo run typecheck",
    "dev:vibe": "pnpm --filter vibe-code-studio dev",
    "dev:nova": "pnpm --filter nova-agent dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "validate": "pnpm run validate:size && pnpm run validate:structure",
    "validate:size": "node scripts/validate-file-size.js",
    "validate:structure": "node scripts/validate-modular.js",
    "plan": "node scripts/create-plan.js",
    "check:rules": "cat MONOREPO_RULES.md",
    "check:agent-rules": "cat .claude/rules.md",
    "pre-commit": "pnpm run validate && pnpm run format:check && pnpm run lint",
    "enforce:all": "pnpm run validate && pnpm run test && pnpm run typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
