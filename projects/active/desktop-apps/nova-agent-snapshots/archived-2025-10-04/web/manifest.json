  "shortcuts": [
    {
      "name": "New Chat",
      "short_name": "Chat",
      "description": "Start a new conversation with NOVA",
      "url": "/?action=new-chat",
      "icons": [
        {
          "src": "/assets/icons/chat-icon-96x96.svg",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Code Execute",
      "short_name": "Code",
      "description": "Execute code with NOVA",
      "url": "/?action=code-execute",
      "icons": [
        {
          "src": "/assets/icons/code-icon-96x96.svg",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Projects",
      "short_name": "Projects",
      "description": "View your projects",
      "url": "/?action=projects",
      "icons": [
        {
          "src": "/assets/icons/project-icon-96x96.svg",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["text/plain", ".txt", ".js", ".py", ".json", ".md"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "text/plain": [".txt"],
        "application/json": [".json"],
        "text/javascript": [".js"],
        "text/python": [".py"],
        "text/markdown": [".md"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "nova",
      "url": "/?protocol=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  }
}