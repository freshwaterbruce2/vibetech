{
  "name": "nova-agent",
  "version": "1.0.0",
  "description": "Neural Omnipresent Virtual Assistant - A personalized AI agent with memory and project management",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tauri dev",
    "dev:server": "tsx watch src/index.ts",
    "dev:web": "vite",
    "build": "tauri build",
    "build:frontend": "vite build",
    "build:web": "cd nova-web && npm run build",
    "start": "tauri dev",
    "cli": "node dist/cli.js",
    "tauri": "tauri",
    "build:watch": "tsc -w",
    "clean": "rimraf dist node_modules/.cache .nyc_output coverage",
    "clean:all": "npm run clean && rimraf node_modules",
    "setup:cross-platform": "npm install && npm run build",
    "verify:cross-platform": "node verify-cross-platform.js",
    "test": "vitest",
    "test:web": "vitest --config vitest.web.config.ts",
    "test:all": "npm run test && npm run test:web",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:integration": "vitest run src/__tests__/integration",
    "test:security": "vitest run src/__tests__/security",
    "test:performance": "vitest run --reporter=json --outputFile=performance-results.json",
    "test:db": "vitest run src/tests/database-performance.test.ts",
    "test:wsl": "vitest --pool=forks --poolOptions.forks.singleFork=true",
    "test:wsl:watch": "vitest watch --pool=forks --poolOptions.forks.singleFork=true",
    "test:wsl:coverage": "vitest run --coverage --pool=forks --poolOptions.forks.singleFork=true",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "optimize-db": "tsx src/scripts/optimize-database.ts",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "setup": "bash scripts/dev-setup.sh",
    "monitor": "node scripts/project-monitor.js",
    "benchmark": "node scripts/performance-benchmark.js",
    "memory-check": "node --expose-gc scripts/memory-leak-detector.js",
    "docs:generate": "typedoc --out docs/api src && node scripts/generate-docs-index.js",
    "deps:check": "npm outdated && npm audit",
    "deps:update": "npx npm-check-updates -u --target minor && npm install",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "complexity": "npx code-complexity src --format json",
    "duplicates": "npx jscpd src --reporters json",
    "health-check": "node scripts/automation/health-monitor.cjs",
    "setup:hooks": "chmod +x .husky/pre-commit",
    "automation:status": "echo 'ðŸ¤– Nova Agent Automation System v1.0.0 - Ready!'",
    "quality:check": "npm run build && npm run test:wsl -- --run",
    "quality:fix": "npm run lint:fix || true",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "icons:generate": "node scripts/generate-icons.js"
  },
  "bin": {
    "nova": "./dist/cli.js"
  },
  "keywords": [
    "ai",
    "agent",
    "assistant",
    "deepseek",
    "memory",
    "rag"
  ],
  "author": "NOVA",
  "license": "MIT",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@langchain/community": "^0.3.0",
    "@langchain/core": "^0.3.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/cli": "^2.8.4",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/sqlite3": "^3.1.11",
    "@vitejs/plugin-react": "^5.0.3",
    "bcrypt": "^6.0.0",
    "chromadb": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "framer-motion": "^12.23.21",
    "glob": "^10.3.10",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.0",
    "lucide-react": "^0.544.0",
    "openai": "^4.72.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sql.js": "^1.13.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^5.0.1",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.0.0",
    "vite": "^7.1.7",
    "winston": "^3.15.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/glob": "^8.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.0",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "code-complexity": "^2.1.0",
    "commander": "^14.0.0",
    "concurrently": "^8.2.2",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^9.16.0",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^9.1.7",
    "jscpd": "^3.5.10",
    "lint-staged": "^16.1.4",
    "madge": "^6.1.0",
    "npm-check-updates": "^16.14.11",
    "postcss": "^8.5.6",
    "prettier": "^3.4.0",
    "rimraf": "^6.0.1",
    "snyk": "^1.1266.0",
    "standard-version": "^9.5.0",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.19.0",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  }
}
