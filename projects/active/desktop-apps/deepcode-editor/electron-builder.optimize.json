{
  "appId": "com.vibecodestudio.editor",
  "productName": "Vibe Code Studio",
  "copyright": "Copyright Â© 2025 Fresh Bruce",
  "directories": {
    "output": "dist-electron",
    "buildResources": "electron/assets"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "!electron/assets/**/*",
    "!**/*.map",
    "!**/*.md",
    "!**/*.log",
    "!**/*.test.*",
    "!**/__tests__/**",
    "!**/test/**",
    "!**/tests/**",
    "!**/coverage/**",
    "!**/.git/**",
    "!**/.vscode/**",
    "!**/node_modules/**/test/**",
    "!**/node_modules/**/tests/**",
    "!**/node_modules/**/example/**",
    "!**/node_modules/**/examples/**",
    "!**/node_modules/**/doc/**",
    "!**/node_modules/**/docs/**",
    "!**/node_modules/**/*.md",
    "!**/node_modules/**/*.markdown",
    "!**/node_modules/**/.npmignore",
    "!**/node_modules/**/LICENSE*",
    "!**/node_modules/**/LICENCE*",
    "!**/node_modules/**/*.d.ts",
    "!**/node_modules/**/*.js.map"
  ],
  "asar": true,
  "asarUnpack": [
    "node_modules/better-sqlite3/**/*"
  ],
  "compression": "maximum",
  "npmRebuild": true,
  "nodeGypRebuild": false,
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.ico",
    "publisherName": "Fresh Bruce",
    "requestedExecutionLevel": "asInvoker",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "deleteAppDataOnUninstall": false,
    "packElevateHelper": false,
    "installerIcon": "electron/assets/icon.ico",
    "uninstallerIcon": "electron/assets/icon.ico",
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "portable": {
    "artifactName": "${productName}-Portable-${version}.${ext}"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["universal"]
      }
    ],
    "icon": "electron/assets/icon.icns",
    "category": "public.app-category.developer-tools",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "electron/entitlements.mac.plist",
    "entitlementsInherit": "electron/entitlements.mac.plist",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "artifactName": "${productName}-${version}.${ext}"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "snap",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets",
    "category": "Development",
    "desktop": {
      "Name": "Vibe Code Studio",
      "Comment": "AI-Powered Code Editor",
      "Categories": "Development;IDE;TextEditor;",
      "Keywords": "code;editor;ai;programming;ide;"
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "appImage": {
    "artifactName": "${productName}-${version}.${ext}"
  },
  "publish": {
    "provider": "github",
    "owner": "freshbruce",
    "repo": "deepcode-editor",
    "releaseType": "release"
  }
}