{
  "name": "crypto-enhanced",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "projects/crypto-enhanced",
  "projectType": "application",
  "tags": ["scope:trading", "type:service", "language:python"],
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python -m venv .venv && .venv\\Scripts\\pip install -r requirements.txt",
        "cwd": "projects/crypto-enhanced"
      },
      "cache": false
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": ".venv\\Scripts\\python.exe run_tests.py",
        "cwd": "projects/crypto-enhanced"
      },
      "outputs": ["{projectRoot}/.pytest_cache"],
      "cache": true
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": ".venv\\Scripts\\python.exe -m pytest --cov=. --cov-report=term-missing --cov-report=html --cov-report=json --cov-report=xml",
        "cwd": "projects/crypto-enhanced"
      },
      "outputs": [
        "{projectRoot}/coverage_html/**",
        "{projectRoot}/coverage.json",
        "{projectRoot}/coverage.xml",
        "{projectRoot}/.coverage"
      ],
      "cache": true
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": ".venv\\Scripts\\python.exe start_live_trading.py",
        "cwd": "projects/crypto-enhanced"
      },
      "cache": false
    },
    "status": {
      "executor": "nx:run-commands",
      "options": {
        "command": ".venv\\Scripts\\python.exe check_status.py",
        "cwd": "projects/crypto-enhanced"
      },
      "cache": false
    },
    "check-orders": {
      "executor": "nx:run-commands",
      "options": {
        "command": ".venv\\Scripts\\python.exe check_orders.py",
        "cwd": "projects/crypto-enhanced"
      },
      "cache": false
    },
    "performance": {
      "executor": "nx:run-commands",
      "options": {
        "command": ".venv\\Scripts\\python.exe performance_monitor.py weekly",
        "cwd": "projects/crypto-enhanced"
      },
      "cache": false
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rmdir /s /q .venv 2>nul || echo \"venv cleaned\"",
          "rmdir /s /q __pycache__ 2>nul || echo \"pycache cleaned\"",
          "del /q *.pyc 2>nul || echo \"pyc files cleaned\""
        ],
        "cwd": "projects/crypto-enhanced",
        "parallel": false
      },
      "cache": false
    }
  }
}
