{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "index.html", "vite.config.ts", "public/**"],
      "cache": true
    },
    "build:production": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "index.html", "vite.config.production.ts", "public/**"],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "build:dev": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "index.html", "vite.config.ts", "public/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "inputs": ["tests/**", "playwright.config.ts", "src/**"],
      "cache": true
    },
    "test:unit": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.test.tsx", "src/**/*.test.ts", "vitest.config.ts", "src/test/setup.ts"],
      "cache": true
    },
    "test:unit:coverage": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.test.tsx", "src/**/*.test.ts", "vitest.config.ts", "src/test/setup.ts"],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "eslint.config.js"],
      "cache": true
    },
    "lint:fix": {
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "eslint.config.js"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig.json"],
      "cache": true
    },
    "quality": {
      "dependsOn": ["lint", "typecheck", "test:unit", "build"],
      "cache": true
    },
    "quality:fix": {
      "dependsOn": ["lint:fix", "typecheck"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "crypto:test": {
      "cache": true,
      "inputs": ["projects/crypto-enhanced/**/*.py", "projects/crypto-enhanced/requirements.txt"]
    },
    "crypto:install": {
      "cache": false
    }
  },
  "globalDependencies": [
    "package.json",
    "tsconfig.json",
    "vite.config.ts",
    "vite.config.production.ts",
    "vitest.config.ts",
    "playwright.config.ts",
    "eslint.config.js"
  ],
  "globalEnv": [
    "NODE_ENV"
  ]
}
