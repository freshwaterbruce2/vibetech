{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Desktop Commander",
  "version": "2.0.0",
  "identifier": "com.desktopcommander.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Desktop Commander",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600,
        "label": "main"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
