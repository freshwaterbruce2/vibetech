# Kraken API Configuration
# Copy this file to .env and fill in your actual credentials

# API Authentication
KRAKEN_API_KEY=your_api_key_here
KRAKEN_PRIVATE_KEY=your_private_key_base64_encoded_here

# API Settings
KRAKEN_API_URL=https://api.kraken.com
KRAKEN_RATE_LIMIT_TIER=starter  # Options: starter, intermediate, pro

# Optional Settings
KRAKEN_TIMEOUT=30
KRAKEN_MAX_RETRIES=3
KRAKEN_ENABLE_RATE_LIMIT=true
KRAKEN_ENABLE_CIRCUIT_BREAKER=true
KRAKEN_ENABLE_METRICS=true
KRAKEN_VERIFY_SSL=true

# Proxy (optional)
# KRAKEN_PROXY=http://proxy.example.com:8080