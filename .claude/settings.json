{
  "permissions": {
    "allow": [
      "Bash(pnpm:*)",
      "Bash(pnpm run:*)",
      "Bash(pnpm nx:*)",
      "Bash(npm run:*)",
      "Bash(npx nx:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(python:*)",
      "Bash(powershell:*)",
      "Bash(node:*)",
      "Bash(sqlite3:*)",
      "Edit",
      "Read"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git rebase:*)",
      "Bash(rm:*)",
      "Bash(del:*)",
      "Write"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./projects/crypto-enhanced/.env)",
      "Read(./projects/crypto-enhanced/nonce_state_primary.json)",
      "Read(./projects/crypto-enhanced/nonce_state_secondary.json)",
      "Read(./projects/crypto-enhanced/config.py)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(rm -rf:*)",
      "Bash(format:*)",
      "Bash(diskpart:*)"
    ],
    "additionalDirectories": [
      "D:/databases"
    ],
    "defaultMode": "default"
  },
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "8192",
    "MAX_THINKING_TOKENS": "10000",
    "BASH_DEFAULT_TIMEOUT_MS": "120000",
    "BASH_MAX_TIMEOUT_MS": "600000",
    "BASH_MAX_OUTPUT_LENGTH": "100000",
    "MCP_TIMEOUT": "30000",
    "MCP_TOOL_TIMEOUT": "60000",
    "MAX_MCP_OUTPUT_TOKENS": "25000",
    "DISABLE_COST_WARNINGS": "0",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "0",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "0",
    "SLASH_COMMAND_TOOL_CHAR_BUDGET": "20000"
  },
  "model": "claude-sonnet-4-5-20250929",
  "includeCoAuthoredBy": true,
  "cleanupPeriodDays": 30,
  "statusLine": {
    "type": "command",
    "command": "powershell -NoProfile -ExecutionPolicy Bypass -File .claude/hooks/status-line.ps1"
  },
  "enableAllProjectMcpServers": false,
  "enabledMcpjsonServers": [
    "nx-mcp",
    "filesystem",
    "sqlite"
  ],
  "disabledMcpjsonServers": [
    "puppeteer"
  ]
}
