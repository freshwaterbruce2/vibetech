# ============================================================================
# VIBE BOOKING PLATFORM - ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Instructions:
# 1. Copy this file to .env.local for local development
# 2. Add these variables to Netlify Dashboard:
#    Settings > Environment variables > Add a variable
# 3. NEVER commit actual API keys to git
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://user:password@host:5432/vibe_bookings
DATABASE_NAME=vibe_bookings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=true

# Supabase (if using)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================================================
# PAYMENT PROCESSING
# ============================================================================
# Stripe
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal (if using)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_EXPIRES_IN=24h
SESSION_SECRET=another_random_secret_min_32_chars
REFRESH_TOKEN_SECRET=refresh_token_secret_min_32_chars
ENCRYPTION_KEY=encryption_key_32_characters

# OAuth Providers (if using social login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ============================================================================
# EMAIL SERVICE (Booking Confirmations)
# ============================================================================
# SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=bookings@yourdomain.com

# Or Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM=Vibe Bookings <bookings@yourdomain.com>

# Resend (modern alternative)
RESEND_API_KEY=re_your_resend_api_key

# ============================================================================
# SMS / NOTIFICATIONS
# ============================================================================
# Twilio
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# OneSignal (Push notifications)
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_rest_api_key

# ============================================================================
# EXTERNAL APIs
# ============================================================================
# Google Maps (for location services)
VITE_GOOGLE_MAPS_API_KEY=AIzaSy...

# Google Places (for hotel search)
GOOGLE_PLACES_API_KEY=AIzaSy...

# Weather API (if showing weather for locations)
WEATHER_API_KEY=your_weather_api_key

# Currency Conversion
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# ============================================================================
# FILE STORAGE
# ============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=vibe-booking-uploads

# Cloudinary (image hosting)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================
# Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (Error tracking)
VITE_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_org
SENTRY_PROJECT=vibe-booking-platform

# PostHog (Product analytics)
VITE_POSTHOG_KEY=phc_your_posthog_key
VITE_POSTHOG_HOST=https://app.posthog.com

# ============================================================================
# RATE LIMITING & CACHING
# ============================================================================
REDIS_URL=redis://default:password@host:6379
REDIS_TLS=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=production
VITE_APP_NAME=Vibe Bookings
VITE_APP_URL=https://vibe-booking-prod.netlify.app
VITE_API_BASE_URL=https://vibe-booking-prod.netlify.app/api
VITE_WS_URL=wss://vibe-booking-prod.netlify.app

# Feature Flags
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_CHAT_SUPPORT=false
VITE_MAINTENANCE_MODE=false

# ============================================================================
# BOOKING-SPECIFIC
# ============================================================================
BOOKING_CONFIRMATION_EMAIL_TEMPLATE_ID=d-xxxxx
BOOKING_CANCELLATION_HOURS=24
BOOKING_MIN_ADVANCE_HOURS=2
MAX_BOOKING_DAYS_AHEAD=365

# ============================================================================
# CORS & SECURITY
# ============================================================================
CORS_ORIGIN=https://vibe-booking-prod.netlify.app,https://yourdomain.com
ALLOWED_HOSTS=vibe-booking-prod.netlify.app,yourdomain.com
COOKIE_DOMAIN=.netlify.app

# ============================================================================
# TESTING (Deploy Previews Only)
# ============================================================================
# These should only be set in deploy-preview context
TEST_MODE=false
BYPASS_PAYMENT=false
MOCK_EMAIL=true

# ============================================================================
# NOTES:
# ============================================================================
# 
# HOW TO ADD TO NETLIFY:
# 1. Go to: https://app.netlify.com/projects/vibe-booking-prod/settings/env
# 2. Click "Add a variable"
# 3. Choose scope: "All scopes" (or specific ones)
# 4. Choose context:
#    - Production: Live site variables
#    - Deploy previews: Test variables
#    - Branch deploys: Staging variables
# 5. Enter key (e.g., STRIPE_SECRET_KEY) and value
# 6. Click "Create variable"
#
# SECURITY BEST PRACTICES:
# - Use VITE_ prefix for client-side variables (exposed in browser)
# - Never prefix sensitive keys like STRIPE_SECRET_KEY with VITE_
# - Rotate keys regularly
# - Use test/sandbox keys for development
# - Use different keys for production vs development
# - Store backup of keys in secure password manager (1Password, LastPass)
#
# REQUIRED VARIABLES (Minimum to run):
# - DATABASE_URL or VITE_SUPABASE_URL + VITE_SUPABASE_ANON_KEY
# - VITE_STRIPE_PUBLISHABLE_KEY + STRIPE_SECRET_KEY
# - JWT_SECRET
# - SMTP credentials for email
#
# ============================================================================
