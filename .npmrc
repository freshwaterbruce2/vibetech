# pnpm Configuration for Monorepo
# Generated: 2025-10-11

# Use hard links for space savings (main benefit - 50% reduction)
package-import-method=hardlink

# Store location (global pnpm store)
store-dir=~/.pnpm-store

# Strict peer dependencies (prevent phantom dependencies)
strict-peer-dependencies=false

# Auto-install peers for compatibility
auto-install-peers=true

# Dedupe peer dependents
dedupe-peer-dependents=true

# Hoist patterns for Nx compatibility
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=*typescript*
public-hoist-pattern[]=@nx/*
public-hoist-pattern[]=nx

# Shamefully hoist for maximum compatibility (can be removed after testing)
shamefully-hoist=true

# Progress bars for better CLI feedback
progress=true

# Audit level for security checks
audit-level=moderate

# Engine strict checking
engine-strict=true
